{
  "buildCommand": "cd packages/game-engine && npx tsc -p tsconfig.build.json",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "devCommand": "npx expo start --web --port $PORT",
  "rewrites": [{ "source": "/((?!api/)(?!.*\\.).*)", "destination": "/index.html" }],
  "headers": [
    {
      "source": "/assets/fonts/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/_expo/static/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/assets/audio/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/assets/audio_end/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/assets/pwa/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ]
}
