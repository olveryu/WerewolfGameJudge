{
  "name": "werewolfgamejudge",
  "version": "1.0.217",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "playwright test",
    "e2e:core": "npx playwright test --workers=1 --reporter=line --trace=on --max-failures=1",
    "e2e:remote": "E2E_ENV=remote npx playwright test --workers=1 --reporter=line --trace=on --max-failures=1",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "fix": "pnpm run lint:fix && pnpm run format:write",
    "quality": "pnpm run fix && pnpm run typecheck && pnpm run lint && pnpm exec jest --passWithNoTests --forceExit",
    "e2e:night": "playwright test night-2p night-6p restart",
    "e2e:ui": "playwright test --ui",
    "deploy": "bash scripts/deploy.sh",
    "release": "bash scripts/release.sh",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.29.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@sentry/cli"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/native-stack": "^7.9.0",
    "@sentry/react-native": "~7.2.0",
    "@supabase/supabase-js": "^2.89.0",
    "expo": "54.0.33",
    "expo-audio": "~1.1.1",
    "expo-crypto": "~15.0.8",
    "expo-haptics": "^15.0.8",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-logs": "^5.5.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-testing-library": "^7.15.4",
    "glob": "^13.0.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "jest-expo": "^54.0.17",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.55.0"
  },
  "private": true
}
