{
  "name": "werewolfgamejudge",
  "version": "1.0.143",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "playwright test",
    "e2e:core": "npx playwright test --workers=1 --reporter=line --trace=on --max-failures=1",
    "e2e:remote": "E2E_ENV=remote npx playwright test --workers=1 --reporter=line --trace=on --max-failures=1",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "fix": "npm run lint:fix && npm run format:write",
    "quality": "npm run typecheck && npm run lint && npm run format && npm run test -- --passWithNoTests",
    "e2e:night": "playwright test night-2p night-6p restart",
    "e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/native-stack": "^7.9.0",
    "@supabase/supabase-js": "^2.89.0",
    "expo": "~54.0.31",
    "expo-audio": "~1.1.1",
    "expo-crypto": "~15.0.8",
    "expo-haptics": "^15.0.8",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-logs": "^5.5.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "29.7.0",
    "jest-expo": "^54.0.16",
    "prettier": "^3.8.0",
    "react-native-web": "^0.21.2",
    "react-test-renderer": "^19.1.0",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.2"
  },
  "private": true
}
